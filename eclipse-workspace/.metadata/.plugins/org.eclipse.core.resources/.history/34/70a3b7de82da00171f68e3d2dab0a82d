   <%
      Cookie[] cookies = request.getCookies();

      String id = "";

      String pw = "";

      if (cookies != null) {

         for (Cookie c : cookies) {

            if (c.getName().equals("id")) {

               id = c.getValue();

            } else if (c.getName().equals("pw")) {

               pw = c.getValue();
            }
         }
      }
   %>
