package pj1;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class Dao {
   public boolean login(String id, String pw) {
   // db에서 가져온 값
   //public static void main(String[] args) {
        Connection conn = null;
        Statement stmt = null;
        int control=0;
        try {
         Class.forName("com.mysql.jdbc.Driver");
         String url = "jdbc:mysql://localhost:3306/login_db";
         conn = DriverManager.getConnection(url, "root", "1234");
         stmt = conn.createStatement();
 
            String sql;
            sql = "select * FROM table;";
 
            ResultSet rs = stmt.executeQuery(sql);
 
            while (rs.next()) {
                if(id.equals(rs.getString("dbId")) && pw.equals(rs.getString("dbPw"))){
                	//id&pw가 일치할 경우 값을 남긴다
                	control=1;
                	}//일치하지 않는 경우 남기지 않는다
                	control=0;
              // String dbId = rs.getString("dbId");
               //String dbPw = rs.getString("dbPw");
            }

            rs.close();
            stmt.close();
            conn.close();
        
       
        } catch (Exception e) {
         System.out.println("DB 연동 오류입니다. : " + e.getMessage());
         //return false;
        }
		//return false;//임의
        if(control==1)
        	return true;
        else
        	return false;
} 
}
 